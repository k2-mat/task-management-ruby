<p style="color: green"><%= notice %></p>

<h1>Tasks</h1>

<%= search_form_for @search do |f| %>
  <%= f.label :title_cont, "件名" %>
  <%= f.search_field :title_cont %>

  <%= f.label :body_cont, "内容" %>
  <%= f.search_field :body_cont %>
  <%= f.submit %>

  <%= link_to "クリア", tasks_path %>
<% end %>

<%= sort_link(@search, :title) %>
<%= sort_link(@search, :body) %>

<div id="tasks">
  <% @tasks.each do |task| %>
    <%= render task %>
    <p>
      <%= link_to "Show this task", task %>
    </p>
  <% end %>
</div>

<%= paginate @tasks %>

<%= link_to "New task", new_task_path %>
