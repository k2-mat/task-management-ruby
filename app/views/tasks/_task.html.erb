<%= turbo_frame_tag task do %>
  <div class="row py-2 border-top">
    <div class="col-4 my-auto">
      <%= task.title %>
    </div>
    <div class="col-4 my-auto">
      <%= task.body %>
    </div>
    <div class="col-4">
      <div class="d-flex justify-content-end">
        <%= link_to "Edit", edit_task_path(task), class: "btn btn-sm btn-outline-primary me-2", data: { turbo_frame: "modal" } %>
        <%= link_to "Delete", task, class: "btn btn-sm btn-outline-danger", data: { turbo_method: :delete, turbo_confirm: "Are you sure?" } %>
      </div>
    </div>
  </div>
<% end %>
